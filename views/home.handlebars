<head>
    <link rel="stylesheet" href="timeline.css">
    <script src="//code.jquery.com/jquery.min.js"></script>
    <script src="timeline.js"></script>
    <script>
        $(function () {
            $.UDNZTimeline({
                "data_url": "data.json",
                "container": {
                    "id": "demo_3_container"
                },
                "effect": $.DEFINED_EFFECT_TYPE.rotateY | $.DEFINED_EFFECT_TYPE.slide
            }).Draw().ShowNode('node_5', 300);
        });


        function myFunction() {
            var popup = document.getElementById("myPopup");
            popup.classList.toggle("show");
        }
    </script>

</head>

<body>
    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>{{user.name}}</h3>
            </div>
            <ul class="list-unstyled components">
                <li class="active">
                    <br>
                    A: <p class="list">{{user.nouns}}</p>
                </li>
                <li>
                    Who is: <p class="list">{{user.adjectives}}</p>
                </li>
                <li>
                    And enjoys: <p class="list">{{user.verbs}}</p>
                </li>
            </ul>
            <a href="/profile">(Edit)</a>
        </nav>



        <div id="content">
            <section>
                <h2>Timeline</h2>

                <div id="demo_3_container"></div>

            </section>


            <div class="line"></div>

            <h2>Tasks</h2>
            
            <ul>
                {{#each tasks}}
                <div class="popup" onclick="myFunction()"> 
                    <p><strong> <u>{{tasks.title}}:</u></strong> {{tasks.description}} </p>
                    <span class="popuptext" id="myPopup">
                        <li><u>Task Name:</u> {{tasks.title}}</li>
                        <li><u>Description:</u> {{tasks.description}}</li>
                        <li><u>Complete By:</u> {{tasks.completedBy}}</li>
                        {{!-- <li>Checkpoints:
                            {{tasks.checkpoints}}
                        </li> --}}
                        <a href="/long-term/{{tasks.id}}">(Edit)</a>
                    </span>
                </div>
                {{/each}}
            </ul>

            <a href="/long-term">(Add A Long-Term Task)</a>

            <div class="line"></div>

